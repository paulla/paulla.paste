<!DOCTYPE html>
<html xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      >
  <head>
    <title>paulla paste</title>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
    <meta name="keywords" content="python web application" />
    <meta name="description" content="pyramid web application" />
    <link rel="shortcut icon" href="${request.static_url('paulla.paste:static/favicon.ico')}" />
  </head>
  <body>
    <div class="container-fluid"
	 tal:condition="request.session.peek_flash()"
	 tal:define="flashes request.session.pop_flash()">

      <div tal:repeat="flash flashes" class="alert ${flash['status']}" >
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<span>
	  ${flash['message']}
	</span>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span3">
	<ul class="nav nav-tabs nav-stacked">
	  <li tal:condition='request.path != "/"'>
	    <a href="${request.route_path('home')}">new</a>
	  </li>
	    <li tal:repeat="current request.previous">
	      <a href="${request.route_path('oneContent', idContent=current._id)}">${current.title} </a>
	    </li>

	</ul>
	</div>
	<div class="span9">
	  <div id="content" metal:define-slot="content">

	  </div>
	</div>
    </div>

  </body>
</html>
